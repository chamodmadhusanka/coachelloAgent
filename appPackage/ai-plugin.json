          "type": "AdaptiveCard",
          "title": "Book a Coaching Session",
          "body": "Do you want to proceed with booking a coaching session?"
        },
        "response_semantics": {
          "data_path": "$",
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "$when": "${error == 'more_than_one_coach'}",
                "type": "TextBlock",
                "text": "${message}",
                "wrap": true
              },
              {
                "$when": "${error == 'more_than_one_coach'}",
                "type": "Container",
                "items": [
                  {
                    "type": "ColumnSet",
                    "$data": "${data}",
                    "columns": [
                      {
                        "type": "Column",
                        "items": [
                          {
                            "type": "Image",
                            "style": "Person",
                            "url": "${image_url}",
                            "altText": "${first_name}",
                            "size": "Small"
                          }
                        ],
                        "width": "auto"
                      },
                      {
                        "type": "Column",
                        "items": [
                          {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${first_name} ${last_name}",
                            "wrap": true
                          },
                          {
                            "type": "TextBlock",
                            "spacing": "None",
                            "size": "Small",
