{
  "$schema": "https://developer.microsoft.com/json-schemas/copilot/plugin/v2.1/schema.json",
  "schema_version": "v2.1",
  "name_for_human": "Coachello",
  "description_for_human": "A simple service to manage coaches and their calendars, now with conversational event creation.",
  "namespace": "Coachello",
  "functions": [
    {
      "name": "getCoachEvents",
      "description": "Returns events for a coach within a specific date range and time zone",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.message",
            "subtitle": "$.error"
          }
        }
      }
    },
    {
      "name": "getCoachDetails",
      "description": "Returns coach details including first name, last name, email, phone number, image URL, and timezone",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.data.first_name",
            "subtitle": "$.message"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "Coach Details"
              },
              {
                "type": "TextBlock",
                "text": "First Name: ${if(data.first_name, data.first_name, 'N/A')}",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Last Name: ${if(data.last_name, data.last_name, 'N/A')}",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Email: ${if(data.email, data.email, 'N/A')}",
                "wrap": true
              }
            ]
          }
        }
      }
    },
    {
      "name": "listRepairs",
      "description": "Returns a list of repairs with their details and images",
      "capabilities": {
        "response_semantics": {
          "data_path": "$.results",
          "properties": {
            "title": "$.title",
            "subtitle": "$.id"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "Container",
                "$data": "${$root}",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "id: ${if(id, id, 'N/A')}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "title: ${if(title, title, 'N/A')}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "description: ${if(description, description, 'N/A')}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "assignedTo: ${if(assignedTo, assignedTo, 'N/A')}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "date: ${if(date, date, 'N/A')}",
                    "wrap": true
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "name": "bookCoachingSession",
      "description": "Books a coaching session with a coach and return information of whether the booking process is successful or not.",
      "capabilities": {
        "response_semantics": {
          "data_path": "$.message",
          "properties": {
            "title": "Event created successfully",
            "subtitle": "$.error"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "text": "Event succesfully created",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "${error ? 'Error occurred. Please check details.' : ''}",
                "wrap": true,
                "isVisible": "${error}"
              }
            ]
          }
        }
      }
    },
    {
      "name": "cancelCoachingSession",
      "description": "Cacnel a coaching session with a coach and return information of whether the booking process is successfully cancelled or not.",
      "capabilities": {
        "response_semantics": {
          "data_path": "$.message",
          "properties": {
            "title": "Event cancelled successfully",
            "subtitle": "$.error"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "text": "Event succesfully cancelled",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "${error ? 'Error occurred. Please check details.' : ''}",
                "wrap": true,
                "isVisible": "${error}"
              }
            ]
          }
        }
      }
    },
    {
      "name": "rescheduleCoachingSession",
      "description": "Reschedull a coaching session with a coach and return information of whether the booking process is successfully reschedulled or not.",
      "capabilities": {
        "response_semantics": {
          "data_path": "$.message",
          "properties": {
            "title": "Event reschedulled successfully",
            "subtitle": "$.error"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "text": "Event succesfully reschedulled",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "${error ? 'Error occurred. Please check details.' : ''}",
                "wrap": true,
                "isVisible": "${error}"
              }
            ]
          }
        }
      }
    },
    {
      "name": "getPreviousCoaches",
      "description": "Retrieves a list of previous coaches based on the client's email address.",
      "capabilities": {
        "response_semantics": {
          "data_path": "$.data",
          "properties": {
            "title": "Previous Coaches",
            "subtitle": "$.message"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "text": "Here is a list of your previous coaches:",
                "wrap": true
              },
              {
                "type": "Container",
                "$data": "{data}",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "${data}",
                    "wrap": true
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "name": "getUpcomingMeeting",
      "description": "Returns the upcoming meeting details for a specific client.",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.meeting_start_time",
            "subtitle": "$.coach_name"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "text": "Upcoming Meeting Details",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Start Time: ${meeting_start_time}",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "End Time: ${meeting_end_time}",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Coach: ${coach_name}",
                "wrap": true
              }
            ]
          }
        }
      }
    },
    {
      "name": "testSystem",
      "description": "Returns test system response.",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.testing",
            "subtitle": "$.testing"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "text": "${testing}",
                "wrap": true
              }
            ]
          }
        }
      }
    },
    {
      "name": "getUserDetails",
      "description": "Get logged user details",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.id",
            "subtitle": "$.comapny_id"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "User Details"
              },
              {
                "type": "TextBlock",
                "text": "Client ID: ${if(data.id, data.id, 'N/A')}",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "First Name: ${if(data.first_name, data.first_name, 'N/A')}",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Last Name: ${if(data.last_name, data.last_name, 'N/A')}",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Email: ${if(data.email, data.email, 'N/A')}",
                "wrap": true
              }
            ]
          }
        }
      }
    },
    {
      "name": "chatWithAICoach",
      "description": "Responds to a user prompt utilizing Coachello's AI Coach.",
      "capabilities": {
        "response_semantics": {
          "data_path": "$.message",
          "properties": {
            "title": "Event created successfully",
            "subtitle": "$.error"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "text": "Response Obtained Successfully",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "${error ? 'Error occurred. Please check details.' : ''}",
                "wrap": true,
                "isVisible": "${error}"
              }
            ]
          }
        }
      }
    }
  ],
  "runtimes": [
    {
      "type": "OpenApi",
      "auth": {
        "type": "OAuthPluginVault",
        "reference_id": "MWIzY2QzMDQtNWFkYy00ZTUxLTg2NDItZjRjNjg3NGQwZDZiIyNiMDg0NThjMy1hOTljLTQ3YmQtYWIyMi0yOGMxOTIyNzQ3NGY="
      },
      "spec": {
        "url": "apiSpecificationFile/openapi.yaml"
      },
      "run_for_functions": [
        "getCoachEvents",
        "getCoachDetails",
        "listRepairs",
        "bookCoachingSession",
        "getPreviousCoaches",
        "getUpcomingMeeting",
        "cancelCoachingSession",
        "rescheduleCoachingSession",
        "testSystem",
        "getUserDetails",
        "chatWithAICoach"
      ]
    }
  ],
  "capabilities": {
    "localization": {},
    "conversation_starters": [
      {
        "text": "List all repairs"
      },
      {
        "text": "Get details of a coach"
      },
      {
        "text": "Get events of a coach"
      },
      {
        "text": "Create an event"
      }
    ]
  }
}
