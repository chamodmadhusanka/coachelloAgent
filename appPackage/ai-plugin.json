                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "Image",
                        "style": "Person",
                        "url": "${data.coach_avatar}",
                        "altText": "${data.coach_name}",
                        "size": "Small"
                      }
                    ],
                    "width": "auto"
                  },
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "weight": "Bolder",
                        "text": "${data.coach_name}",
                        "wrap": true
                      },
                      {
                        "type": "TextBlock",
                        "spacing": "None",
                        "text": "${data.coach_time_zone}",
                        "isSubtle": true,
                        "wrap": true
                      }
                    ],
                    "width": "stretch"
                  }
                ]
              },
              {
                "$when": "${error==false}",
                "type": "TextBlock",
                "text": "üìÖ ${formatDateTime(data.meeting_start_time, 'dd MMMM - h tt')} - ${formatDateTime(data.meeting_end_time, 'h tt')}"
              },
              {
                "$when": "${error==false}",
                "type": "TextBlock",
                "text": "**Description:** ${data.client_meeting_note}",
                "wrap": true
              }
            ]
          }
        }
      }
    },
