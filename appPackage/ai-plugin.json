{
  "$schema": "https://developer.microsoft.com/json-schemas/copilot/plugin/v2.2/schema.json",
  "schema_version": "v2.2",
  "name_for_human": "Coachello Copilot",
  "description_for_human": "A simple service to manage coaches and their calendars, now with conversational event creation.",
  "namespace": "Coachello",
  "functions": [
    {
      "name": "cancelCoachingSession",
      "description": "Returns the outcome of the cancellation process whether success or failure.",
      "capabilities": {
        "confirmation": {
          "type": "AdaptiveCard",
          "title": "Cancel a Coaching Session",
          "body": "Do you want to proceed with the cancellation of the booked session?"
        },
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.message"
          }
        }
      }
    },
    {
      "name": "getCoachDetails",
      "description": "Returns coach details including first name, last name, email, phone number, image URL, and timezone",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.message"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "$when": "${error == 'more_than_one_coach'}",
                "type": "TextBlock",
                "text": "${message}",
                "wrap": true
              },
              {
                "$when": "${error == 'more_than_one_coach'}",
                "type": "Container",
                "items": [
                  {
                    "type": "ColumnSet",
                    "$data": "${data}",
                    "columns": [
                      {
                        "type": "Column",
                        "items": [
                          {
                            "type": "Image",
                            "style": "Person",
                            "url": "${image_url}",
                            "altText": "${first_name}",
                            "size": "Small"
                          }
                        ],
                        "width": "auto"
                      },
                      {
                        "type": "Column",
                        "items": [
                          {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${first_name} ${last_name}",
                            "wrap": true
                          },
                          {
                            "type": "TextBlock",
                            "spacing": "None",
                            "size": "Small",
                            "text": "${timezone}",
                            "isSubtle": true,
                            "wrap": true
                          }
                        ],
                        "width": "stretch"
                      }
                    ]
                  }
                ]
              },
              {
                "$when": "${error==false}",
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "Image",
                        "style": "Person",
                        "url": "${data.image_url}",
                        "altText": "${data.first_name}",
                        "size": "Small"
                      }
                    ],
                    "width": "auto"
                  },
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "weight": "Bolder",
                        "text": "${data.first_name} ${if(data.last_name, data.last_name, '')}",
                        "wrap": true
                      },
                      {
                        "type": "TextBlock",
                        "spacing": "None",
                        "text": "üìç ${data.city} (${data.timezone})",
                        "isSubtle": true,
                        "wrap": true
                      }
                    ],
                    "width": "stretch"
                  }
                ]
              },
              {
                "$when": "${error==false}",
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "üåê ${data.languages}",
                        "wrap": true
                      }
                    ],
                    "width": "auto"
                  }
                ]
              },
              {
                "$when": "${error==false}",
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "**Specializations:** ${data.specializations}",
                        "wrap": true
                      }
                    ],
                    "width": "auto"
                  }
                ]
              },
              {
                "$when": "${error==false}",
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "**Years of Coaching:** ${data.years_coaching}",
                        "wrap": true
                      },
                      {
                        "type": "TextBlock",
                        "text": "**Years of Experience:** ${data.years_experience}",
                        "wrap": true
                      },
                      {
                        "type": "TextBlock",
                        "text": "**Certified by:** ${data.certified_by}",
                        "wrap": true
                      }
                    ],
                    "width": "auto"
                  }
                ]
              }
            ],
            "actions": [
              {
                "$when": "${error==false}",
                "type": "Action.OpenUrl",
                "title": "Website",
                "url": "${data.website}"
              }
            ]
          }
        }
      }
    },
    {
      "name": "getCoachEvents",
      "description": "Returns events for a coach from today and before a certain end date",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "$when" : "${error == false}",
                "type": "TextBlock",
                "text": "‚è∞ Please note that coaches are available exclusively between 7:00 AM and 9:00 PM. Kindly ensure to select a time slot within these hours.",
                "wrap": true
              },
              {
                "$when" : "${error == 'more_than_one_coach'}",
                "type": "TextBlock",
                "text": "${message}",
                "wrap": true
              },
              {
                "$when" : "${error == 'more_than_one_coach'}",
                "type": "Container",
                "items": [
                  {
                    "type": "ColumnSet",
                    "$data": "${data}",
                    "columns": [
                      {
                        "type": "Column",
                        "items": [
                          {
                            "type": "Image",
                            "style": "Person",
                            "url": "${image_url}",
                            "altText": "${first_name}",
                            "size": "Small"
                          }
                        ],
                        "width": "auto"
                      },
                      {
                        "type": "Column",
                        "items": [
                          {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${first_name} ${last_name}",
                            "wrap": true
                          },
                          {
                            "type": "TextBlock",
                            "spacing": "None",
                            "size": "Small",
                            "text": "${timezone}",
                            "isSubtle": true,
                            "wrap": true
                          }
                        ],
                        "width": "stretch"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "name": "getPreviousCoaches",
      "description": "Returns a list of coaches that a specific client has previously booked.",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "static_template": {
            "$when": "${error==false}",
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "Image",
                        "style": "Person",
                        "url": "${data.image_url}",
                        "altText": "${data.first_name}",
                        "size": "Small"
                      }
                    ],
                    "width": "auto"
                  },
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "weight": "Bolder",
                        "text": "${data.first_name} ${if(data.last_name, data.last_name, '')}",
                        "wrap": true
                      },
                      {
                        "type": "TextBlock",
                        "spacing": "None",
                        "text": "üìç ${data.city} (${data.timezone})",
                        "isSubtle": true,
                        "wrap": true
                      }
                    ],
                    "width": "stretch"
                  }
                ]
              },
              {
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "üåê ${data.languages}",
                        "wrap": true
                      }
                    ],
                    "width": "auto"
                  }
                ]
              },
              {
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "**Specializations:** ${data.specializations}",
                        "wrap": true
                      }
                    ],
                    "width": "auto"
                  }
                ]
              },
              {
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "**Year of Coaching Start:** ${data.years_coaching}",
                        "wrap": true
                      },
                      {
                        "type": "TextBlock",
                        "text": "**Years of Corporate Experience:** ${data.years_experience}",
                        "wrap": true
                      },
                      {
                        "type": "TextBlock",
                        "text": "**Certified by:** ${data.certified_by}",
                        "wrap": true
                      }
                    ],
                    "width": "auto"
                  }
                ]
              }
            ],
            "actions": [
              {
                "type": "Action.OpenUrl",
                "title": "Website",
                "url": "${data.website}"
              }
            ]
          }
        }
      }
    },
    {
      "name": "testSystem",
      "description": "Get test system response",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.results"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "text": "results: ${if(results, results, 'N/A')}",
                "wrap": true
              }
            ]
          }
        }
      }
    },
    {
      "name": "getUpcomingMeeting",
      "description": "Returns the details of the upcoming meeting scheduled for a client based on their time zone",
      "capabilities": {
        "response_semantics": {
          "data_path": "$",
          "properties": {
            "title": "$.meeting.title",
            "subtitle": "$.meeting.description"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "Upcoming Meeting Details"
              },
              {
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "Image",
                        "style": "Person",
                        "url": "${coach_avatar}",
                        "altText": "${coach_name}",
                        "size": "Small"
                      }
                    ],
                    "width": "auto"
                  },
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "TextBlock",
                        "weight": "Bolder",
                        "text": "${coach_name}",
                        "wrap": true
                      },
                      {
                        "type": "TextBlock",
                        "spacing": "None",
                        "text": "${coach_time_zone}",
                        "isSubtle": true,
                        "wrap": true
                      }
                    ],
                    "width": "stretch"
                  }
                ]
              },
              {
                "type": "TextBlock",
                "text": "üìÖ ${formatDateTime(meeting_start_time, 'dd MMMM - h tt')} - ${formatDateTime(meeting_end_time, 'h tt')}"
              },
              {
                "type": "TextBlock",
                "text": "**Description:** ${client_meeting_note}",
                "wrap": true
              }
            ]
          }
        }
      }
    },
    {
      "name": "listRepairs",
      "description": "Returns a list of repairs with their details and images",
      "capabilities": {
        "response_semantics": {
          "data_path": "$.results",
          "properties": {
            "title": "$.title",
            "subtitle": "$.id"
          },
          "static_template": {
            "type": "AdaptiveCard",
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5",
            "body": [
              {
                "type": "Container",
                "$data": "${$root}",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "id: ${if(id, id, 'N/A')}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "title: ${if(title, title, 'N/A')}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "description: ${if(description, description, 'N/A')}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "assignedTo: ${if(assignedTo, assignedTo, 'N/A')}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "date: ${if(date, date, 'N/A')}",
                    "wrap": true
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "name": "chatWithAICoach",
      "description": "Returns the response of either AI Flash Coach or AI RolePlay coach for a user prompt",
      "capabilities": {
        "response_semantics": {
          "data_path": "$"
        }
      }
    },
    {
